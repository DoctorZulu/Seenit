    <!-- CSS link -->
    <link rel="stylesheet" type="text/css" href="../styles/main.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

    <title>Seenit | Index</title>
  </head>
  <body>

    <!-- Jquery Library + Bootstrap JavaScript Library-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


    <!-- Seenit LOGO and Login/Register Bar -->
<nav>
<div class="row" id="nav">
  <div class="col-sm-7">
    <a href="/posts"  id="navlink" class="logo"><h1><i class="fab fa-reddit"></i>Seenit</h1></a>
  </div>

  <div class="col-sm-2" id="link">
    <a  id="navlink" href="/posts/new">Create A New Post</a>
  </div>
   <div class="col-sm-1" id="link">
    <a  id="navlink" href="/login">Login</a>
   </div>
    <div class="col-sm-1" id="link">
    <a  id="navlink" href="/register">Register</a>
  </div>
</div>
</nav>
    <main>
        <h2>Edit <%= post.body %></h2>
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
            <p>
                <input
                type="text"
                name="title"
                placeholder="Post Title"
                value="<%= post.title %>"
                >
            </p>
            <p>
                <input
                type="text"
                name="body"
                placeholder="Body"
                value="<%= post.body %>"
                >
            </p>
            <input type="submit" value="Update Post">
        </form>
    </main>
</body>
</html>