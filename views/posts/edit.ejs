  <div class="jumbotron text-center">
  <h2>Edit <%= post.body %></h2>
  <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
      <p>
          <input
          type="text"
          name="title"
          placeholder="Post Title"
          value="<%= post.title %>"
          >
      </p>
      <p>
          <textarea
          type="text"
          class="textbox"
          name="body"
          placeholder="Body"
          value="<%= post.body %>"
          ></textarea>
      </p>
      <input type="submit" value="Update Post">
  </form>
  
</div>
</body>
