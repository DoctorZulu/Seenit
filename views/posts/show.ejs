    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    <!-- CSS link -->
    <link rel="stylesheet" type="text/css" href="../styles/main.css">

</head>
<body>

    <!-- Jquery Library + Bootstrap JavaScript Library-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>    

    <!-- Seenit LOGO and Login/Register Bar -->
    <nav>
        <div class="row" id="nav">
          <div class="col-sm-7">
            <h1>Seenit</h1>
          </div>
        
          <div class="col-sm-2" id="link">
            <a href="/posts/new">Create A New Post</a>
          </div>
           <div class="col-sm-1" id="link">
            <a href="">Login</a>
           </div>
            <div class="col-sm-1" id="link">
            <a href="">Register</a>
          </div>
        </div>
        </nav>

<!--     <nav>
        <h1>Post</h1>
        <ul>
            <li>
            <a href="/posts">Posts</a>
            </li>
        </ul>
    </nav> -->
    <main>
        <!-- VIEW POSTS -->
        <section>
            <h2><%= post.title %></h2>
            <a href="/post/<%= post._id %>/edit">Edit</a>
            <ul>
                <li>Post Name: <%= post.title %></li>
                <li>Body: <%= post.body %></li>
                <li>User: <%= post.author %></li>
            </ul>
        </section>
        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
        </form>
    </form>

        <!-- VIEW COMMENTS -->
        <p>
            <form action="/posts/<%= post._id %>/comments" method="POST">
                <p>
                  <textarea type="text" name="commentbody" placeholder="Write your comment here..."></textarea>
                </p>
                
                <input type="submit" value="Create" />
              </form>
            
    
            <% post.comments.forEach ( comment => { %>
            <p>
                <%= comment.commentbody %>
                <%= comment.commentauthor %>
            </p>
            <% }) %>
        
        
    </p>

    
        </main>
        
    </body>
    </html>