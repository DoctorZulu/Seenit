<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap Library -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    
    <!-- CSS link -->
    <link rel="stylesheet" type="text/css" href="../styles/main.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

    <title>Seenit | Index</title>
  </head>
  <body>

    <!-- Jquery Library + Bootstrap JavaScript Library-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    
</head>
<body>
  <nav>
    <div class="row text-left" id="nav">
      <div class="col-sm-8">
        <h1><i class="fab fa-reddit-square"></i>Seenit</h1>
      </div>
    
      <div class="col-sm-2" id="link">
        
        <a href="/posts/new" data-toogle="tooltip" title="Create a post"><i class="fas fa-pencil-alt"></i></a>
      </div>
       <div class="col-sm-1" id="link">
        
        <a href="/login" data-toogle="tooltip" title="Log in"><i class="fas fa-sign-in-alt"></i></a>
       </div>
        <div class="col-sm-1" id="link">
          
        <a href="/register" data-toogle="tooltip" title="Create profile"><i class="fas fa-user-plus"></i></a>
      </div>
    </div>
    </nav>
    <main>
        <!-- VIEW POSTS -->
        <div class="jumbotron text-center">
        <section>
            <h2>Post Data</h2>
            <a href="/posts/<%= post._id %>/edit">Edit</a>
            <aside>
                <i class="fas fa-arrow-up"></i>
                <i class="fas fa-arrow-down"></i>
            </aside>
            <ul>
                <li>Post Name: <%= post.title %></li>
                <li>User: <%= user.username %></li>
                <li>Body: <%= post.body %></li>
                
            </ul>
        </section>
        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
        </form>
    </form>
</div>

        <!-- VIEW COMMENTS -->
        <div class="jumbotron text-center">
        <p>
            <form action="/posts/<%= post._id %>/comments" method="POST">
                <p>
                  <textarea type="text" name="commentbody" placeholder="Write your comment here..."></textarea>
                </p>
                
                <input type="submit" value="Create" />
              </form>
            
    
            <% post.comments.forEach ( comment => { %>
            <p>
                <%= comment.commentbody %>
                <%= comment.commentauthor %>
            </p>
            <% }) %>
        
        
    </p>
</div>

    
        </main>
        
    </body>
    </html>