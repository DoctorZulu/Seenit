<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Seenit | Index</title>
  </head>
  <body>
    <nav>
      <h1>Seenit</h1>
      <ul>
        
        <li>
          <a href="/posts/new">Create A New Post</a>
        </li>
        
      </ul>
    </nav>

    <main>
      <h2>All Posts</h2>
      
      <% if(!post.length) { %>
        <a href="/posts/new">Create A New Post</a>
      <% } %>

      <ul>
        <% post.forEach(post => { %>
        <li>
          <a href="/posts/<%= post._id %>"> <%= post.title %> </a>
          <a href="/posts/<%= post._id %>"> <%= post.category %> </a>
          <a href="/posts/<%= post._id %>"> <%= post.author %> </a>
        </li>
        <% }) %>
      </ul>
      
    </main>
  </body>
</html>