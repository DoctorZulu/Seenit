<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Seenit | Index</title>
  </head>
  <body>
    <nav>
      <h1>Seenit</h1>
      <ul>
        
        <li>
          <a href="/posts/new">Create A New Post</a>
        </li>
        
      </ul>
    </nav>

    <main>
      <h2>All Posts</h2>
      
      <% if(post.length === 0) { %>
        <a href="/posts/new">Create A New Post</a>
      <% } %>

      <ul>
        <% post.forEach(post => { %>
        <li>
          <a href="/posts/<%= post._id %>"> <%= post.title %> </a>
          <a href="/posts/<%= post._id %>"> <%= post.category %> </a>
          <a href="/posts/<%= post._id %>"> <%= post.author %> </a>
        </li>
        <% }) %>
      </ul>
     
      <% if (user){ %>
        <p><%= user.username %></p>
      <form action="/logout?_method=DELETE" method="POST">
        <input type="submit" value="Logout">
      </form>
      <% } %>

      <ul>
        
        <li>
          <a href="/posts/"> All</a>
          <a href="/posts/category?category=music"> Music </a>
          <a href="/posts/category?category=aww"> Aww </a>
          <a href="/posts/category?category=world_events"> World Events</a>
          <a href="/posts/category?category=Gaming"> Gaming </a>
          <a href="/posts/category?category=youtube"> YouTube </a>
          <a href="/posts/category?category=well_that_sucks"> Well That Sucks </a>
          <a href="/posts/category?category=roast_me"> Roast Me </a>
          <a href="/posts/category?category=casual"> Casual </a>
          <a href="/posts/category?category=dank_memes"> Dank Memes</a>
          <a href="/posts/category?category=dan_the_man"> Dan The Man </a>
        </li>
        
      </ul>

      

      
    </main>
  </body>
</html>