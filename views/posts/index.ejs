  <body>

    <!-- Jquery Library + Bootstrap JavaScript Library-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


    <!-- Seenit LOGO and Login/Register Bar -->
<nav>
<div class="row" id="nav">
  <div class="col-sm-8">
    <h1>Seenit</h1>
  </div>

  <div class="col-sm-2" id="link">
    <a href="/posts/new">Create A New Post</a>
  </div>
   <div class="col-sm-1" id="link">
    <a href="">Login</a>
   </div>
    <div class="col-sm-1" id="link">
    <a href="">Register</a>
  </div>
</div>
</nav>

    <main>
      <div class="row">
        <div class="col-sm-7" id="allPosts">
          <h2>All Posts</h2>

          <% if(!post.length) { %>
            <a href="/posts/new">Create A New Post</a>
          <% } %>
      
          <ul>
            <% post.forEach(post => { %>
            <li>
              <a href="/posts/<%= post._id %>"> <%= post.title %> </a>
              <a href="/posts/<%= post._id %>"> <%= post.category %> </a>
              <a href="/posts/<%= post._id %>"> <%= post.author %> </a>
            </li>
            <% }) %>
        </div>
      
    
      </ul>
      <div class="col-sm-3" id="categories">

      <h2>Categories</h2>
      <ul>
        
        <li>
          <a href="/posts/"> All</a>
        </li>
        <li>
          <a href="/posts/category/music"> Music </a>
        </li>
        <li>
          <a href="/posts/category/aww"> Aww </a>
        </li>
        <li>
          <a href="/posts/category/worldevents"> World Events</a>
        </li>
        <li>
          <a href="/posts/category/gaming"> Gaming </a>
        </li>
        <li>
          <a href="/posts/category/youtube"> YouTube </a>
        </li>
        <li>
          <a href="/posts/category/wellthatsucks"> Well That Sucks </a>
        </li>
        <li>
          <a href="/posts/category/roastme"> Roast Me </a>
        </li>
        <li>
          <a href="/posts/category/casual"> Casual </a>
        </li>
        <li>
          <a href="/posts/category/dankmemes"> Dank Memes</a>
        </li>
        <li>
          <a href="/posts/category/dantheman"> Dan The Man </a>
        </li>
        
      </ul>
    </div>
    </div>

      
    </main>
  </body>
</html>